<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marco_texto_info"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tituloTarea"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/marco_texto_titulo"
            android:text="Titulo" />

        <TextView
            android:id="@+id/informacionTarea"
            android:layout_width="207dp"
            android:layout_height="90dp"
            android:background="@drawable/marco_texto_info"
            android:text="InformaciÃ³n para la tarea a crear" />

        <CheckBox
            android:id="@+id/confirmacion"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/marco_texto_cbx" />
    </LinearLayout>

</androidx.cardview.widget.CardView>